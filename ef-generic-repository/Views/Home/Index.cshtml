@model IEnumerable<Core.Data.Entities.Employee>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Manage Employees</title>
</head>
<body>
    <div style="width:1024px; margin:0 auto;">


        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table" border="1" cellpadding="5" cellspacing="5" width="100%">
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Age
                </th>
                <th>
                    Designation
                </th>
                <th>
                    Salary
                </th>
                <th>Action</th>
            </tr>

            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Designation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td s>
                            @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }, new { @style = "display:inline;" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }, new { @style = "display:inline;" }) |
                          

                            @using (Html.BeginForm("Delete", "Home", new { @id = item.EmployeeID }, FormMethod.Post, new { @style = "display:inline;" }))
                            { 
                                @Html.AntiForgeryToken()

    <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this Employee ?');" />
                            }
                        </td>
                    </tr>
                }
            }
            else
            { 
                <tr>
                    <td colspan="6">No Employees Found.</td>
                </tr>
            }



        </table>

    </div>
</body>
</html>
